#!./Selene 
-- Keyboard functions

Selene.UseCurses()

local pwnd = SelCurses.init()

pwnd:print("Enter at least 7 chars :")
local s = pwnd:getnstr(7)
pwnd:print("Response : '" .. s .."'\n")
pwnd:refresh()

pwnd:print("Unlimited entry :\n")
local s = pwnd:getstr()
pwnd:print("Response : '" .. s .."'\n")
pwnd:refresh()

pwnd:getch()
SelCurses.endwin()

