#!./Selene --dfb:quiet
-- Image example

require "tostring" -- debug only

Selene.init( Selene.CooperativeConst('NORMAL') )	-- Set display cooperative mode

local img,err = SelImage.create("/root/trv/DirectFB-examples-1.2.0/data/pngtest.png")

if img then
	local w,h = img:GetSize()
	local srf = SelSurface.create { size= { img:GetSize() } }	-- create a surface of image size
	srf:destroy()
	img:destroy()
else
	print(err)
end

